@page
@model TeamApplication.EditTeam

@{
    ViewData["Title"] = "Team Edit";
}

<h2>Team Edit</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Team.TeamId" />
            <div class="form-group">
                <label asp-for="Team.JobId" class="control-label"></label>
                <select asp-for="Team.JobId" class="form-control" asp-items="ViewBag.JobId"></select>
                <span asp-validation-for="Team.JobId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
