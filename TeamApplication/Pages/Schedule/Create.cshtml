@page
@model TeamApplication.CreateSchedule

@{
    ViewData["Title"] = "Create Schedule";
}

<h2>Create Schedule</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Schedule.TSDate" class="control-label"></label>
                <input asp-for="Schedule.TSDate" class="form-control" />
                <span asp-validation-for="Schedule.TSDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Schedule.TSPeriod" class="control-label"></label>
                <input asp-for="Schedule.TSPeriod" class="form-control" />
                <span asp-validation-for="Schedule.TSPeriod" class="text-danger"></span>
                <p>Digite "M" para Manhã, "T" para Tarde.</p>
            </div>
            <div class="form-group">
                <label asp-for="Schedule.VolunteerId" class="control-label"></label>
                <select asp-for="Schedule.VolunteerId" class ="form-control" asp-items="ViewBag.VolunteerId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
