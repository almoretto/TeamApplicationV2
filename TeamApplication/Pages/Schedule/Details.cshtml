@page
@model TeamApplication.DetailsSchedule

@{
    ViewData["Title"] = "Schedule Details";
}

<h2>Schedule Details</h2>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    <a asp-page="./Details">@Html.DisplayNameFor(model => model.Schedules[0].TSDate)
                    </a>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Schedules[0].TSPeriod)
                </th>
                <th>
                    <a asp-page="./Details">@Html.DisplayNameFor(model => model.Schedules[0].Volunteer.VName)
                    </a>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Schedules)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TSDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TSPeriod)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Volunteer.VName)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.TeamScheduleId">Edit</a> |
                        <a asp-page="./Delete" asp-route-id="@item.TeamScheduleId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Schedules[0].TeamScheduleId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
@{
    var prevDisabled = !Model.Schedules.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.Schedules.HasNextPage ? "disabled" : "";
}

<a asp-page="./Index"
   asp-route-pageIndex="@(Model.Schedules.PageIndex - 1)"
   class="btn btn-primary @prevDisabled">
    Previous
</a>
<a asp-page="./Index"
   asp-route-pageIndex="@(Model.Schedules.PageIndex + 1)"
   class="btn btn-primary @nextDisabled">
    Next
</a>