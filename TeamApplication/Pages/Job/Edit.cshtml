@page
@model TeamApplication.EditJob
@{
    ViewData["Title"] = "Job Edit";
}

<h1>Job Edit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Job.JobId" />
            <div class="form-group">
                <label asp-for="Job.JobDay" class="control-label"></label>
                <input asp-for="Job.JobDay" class="form-control" />
                <span asp-validation-for="Job.JobDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Job.JobPeriod" class="control-label"></label>
                <input asp-for="Job.JobPeriod" class="form-control" />
                <span asp-validation-for="Job.JobPeriod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Job.ActionKind" class="control-label"></label>
                <select asp-for="Job.ActionKind" class="form-control"></select>
                <span asp-validation-for="Job.ActionKind" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Job.MaxVolunteer" class="control-label"></label>
                <input asp-for="Job.MaxVolunteer" class="form-control" />
                <span asp-validation-for="Job.MaxVolunteer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Job.EntityId" class="control-label"></label>
                <select asp-for="Job.EntityId" class="form-control" asp-items="ViewBag.EntityId"></select>
                <span asp-validation-for="Job.EntityId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
