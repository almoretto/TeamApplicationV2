@page
@model TeamApplication.DeleteState

@{
    ViewData["Title"] = "Excluir Estado";
}
<h3>Excluir Estado Selecionado</h3>
<p class="text-danger">@Model.ErrorMessage</p>

<h4>Você tem certeza que quer excluir este registro? </h4>
<h6>A operação é irreversível!</h6>
<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.State.UFAbreviation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.State.UFAbreviation)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.State.UFName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.State.UFName)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="State.StateId" />
        <input type="submit" value="Confirmar Exclusão" class="btn btn-danger" /> |
        <a asp-page="./Index">Voltar</a>
    </form>
</div>
